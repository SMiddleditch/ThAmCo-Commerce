@model IEnumerable<Product>

@*Define the view data*@
@{
    ViewData["ProductName"] = "List of Products";
}

<html>
<head>
    <style>
        h1 {
            text-align: center;
        }
    </style>
</head>
<body>

    <h1>All product's</h1>

</body>
</html>

<div class="row">
    @foreach (var item in Model)

    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-dark">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.ProductName
                                    <a class="text-white float-right"><i class="bi bi-pencil-square"></i></a>
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.ProductPictureUrl" width="100%" alt="@item.ProductName">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text"><b>Product: </b>@item.ProductName</p>
                            <p class="card-text"><b>Category: </b>@item.Category</p>
                            <p class="card-text"><b>Price: </b>@item.ProductPrice</p>
                            <p class="card-text"><b>Stock: </b>@item.ProductStock</p>
                            <p class="card-text ">
                                <b>Available: </b>                                
                                @if (item.ProductStock >= 0)
                                {
                                    <span class="badge bg-success text-white">STOCK</span>
                                }
                                else if (item.ProductStock <= 0)
                                {
                                    <span class="badge bg-danger text-white">NOSTOCK</span>
                                }
                            </p>
                                </div>
                                    </div>

                            <td class="align-middle">
                                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit </a>
                                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details </a>
                                <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete </a>
                            </td>

                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@item.Id">
                                <i class="bi bi-cart-plus"></i> Add to Cart (Price @item.ProductPrice.ToString("c"))</a>
                            </p>
                        </div>
                    </div>
                </div>
    }
</div>
<div class="text-white">
    <a asp-controler="Product" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus"></i> Add New</a>

</div>
 

