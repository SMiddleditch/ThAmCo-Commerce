@using ThAmCo_Commerce.Data.ViewModels
@model ShopCartVM

@{
    ViewData["Title"] = "Cart Summary";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>List of all your orders</h4>
        </p>

        <table class="table">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Items</th>
                    <th>Total</th>                    
                </tr>
            </thead>
            <tbody>
                @foreach (var P_Order in Model.ShopCart.ProductCarts)
                {
                    <tr>
                        <td class="align-middle">@P_Order.Id</td>
                        <td class="align-middle">@P_Order.Product.ProductName</td>
                        <td class="align-middle">@P_Order.Product.ProductPrice</td>
                        <td class="align-middle">@((@P_Order.Amount * P_Order.Product.ProductPrice).ToString("c"))</td>
                        <td class="align-middle">
                            <a class="text-danger" asp-controller="Orders" asp-action="RemoveItem" asp-route="@P_Order.Product.Id">
                                <i class="bg-info bi-cart-dash"></i>
                            </a>

                            <a class="text-success" asp-controller="Orders" asp-action="AddItem" asp-route="@P_Order.Product.Id">
                                <i class="bg-info bi-cart-plus"></i>
                            </a>
                        </td>                            
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                     <td colspan="2"></td>
                     <td><b>Total:</b></td>
                     <td>
                         @Model.ProductCartTotal.ToString("c")
                     </td>
                     <td></td>
                </tr>
            </tfoot>
        </table>
        <div class="text-center">
            <div class="btn-group">
                <a class="btn btn_outline-success" asp-controller="Product" asp-action="Index">
                    Add more Product
                </a>
            </div>

        </div>

    </div>
</div>
